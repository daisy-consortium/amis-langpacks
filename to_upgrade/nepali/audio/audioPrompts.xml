	<!-- 
DIALOG: SearchDaisy
-->
	<prompt name="searchDaisyDlg_Startup">
		<sequence>
			<!--Search for DAISY books.-->
			<audio src="searchDaisyTitle.mp3"/>
			<!--Enter a path or browse for a folder to search-->
			<audio src="enterPath.mp3"/>
			<!--Press Alt + B to activate the file dialog. -->
			<audio src="instr_AltB.mp3"/>
			<!--Press Alt + S to start searching.-->
			<audio src="instr_AltS.mp3"/>
			<audio src="instr_AltC.mp3"/>
		</sequence>
	</prompt>
	<prompt name="searchDaisyDlg_BooksFound">
		<sequence>
			<var name="NUM_BOOKS"/>
			<!--DAISY books were found.-->
			<audio src="booksWereFound.mp3"/>
			<audio src="instr_arrowKeys.mp3"/>
			<audio src="instr_AltO.mp3"/>
		</sequence>
	</prompt>
	<prompt name="searchDaisyDlg_OneBookFound">
		<sequence>
			<!--One DAISY book was found-->
			<audio src="oneBookFound.mp3"/>
			<audio src="instr_arrowKeys.mp3"/>
			<audio src="instr_AltO.mp3"/>
		</sequence>
	</prompt>
	<prompt name="searchDaisyDlg_NoBooksFound">
		<sequence>
			<audio src="noBooksFound.mp3"/>
			<!--You may enter another path.-->
			<audio src="enterAnotherPath.mp3"/>
			<audio src="instr_AltS.mp3"/>
		</sequence>
	</prompt>
	<prompt name="searchDaisyDlg_Instr">
		<sequence>
			<audio src="instr_AltB.mp3"/>
			<audio src="instr_AltS.mp3"/>
			<audio src="instr_arrowKeys.mp3"/>
			<audio src="instr_AltO.mp3"/>
			<audio src="instr_AltC.mp3"/>
		</sequence>
	</prompt>
